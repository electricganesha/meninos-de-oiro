      <div class="row">
        <div ng-repeat="partner in partners">
          <div class="clearfix" ng-if="$index % 4 == 0"></div>
          <div id="partnersContainerImgCont" class="col-md-4">
            <img src="{{partner.iconPath}}">
          </div>
        </div>
      </div>
    </div>
