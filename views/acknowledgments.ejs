  <div class="row" id="storiesRow" ng-controller="StoryCtrl">
    <table style="margin-bottom:0px; border:none;">
      <tr style="height:215px; border:none;" ng-repeat="story in stories" ng-init="convertVideoLinksToTrust()" ng-class-even="'evenStory'">
      <td width="40%;" style="overflow-x:hidden; border:none;"><iframe id="iFrameAcknowledgments" src="{{story.trustedVideoLink}}" frameborder="0" allowfullscreen></iframe></td>
      <td width="60%;" style="overflow-x:hidden; border:none;">
        <div id="acknowledgementsStoriesText" style="overflow-y:hidden;">
        <h1 style="margin-top:0px;">{{story.title}}</h1> <p>"<b>{{story.text}}</b>"</p></td>
        </div>
      </tr>
    </table>
  </div>
  <div class="row" id="partnersRow" ng-controller="PartnerCtrl" style="margin-top:40px;">
    <div id="partnersContainer">
      <h1> Os Nossos Parceiros </h1>
