  <script>donationMethod="<%=donationMethod%>";</script>
  <div id="donationDiv" style="background-image:url('images/donate.jpg');" ng-controller="DonationCtrl">
    <div id="donationPageBoxTitles">
      <div><h1>DOAR AGORA</h1></div>
      <div><h2>Apoie os nossos projectos</h2></div>
      <div id="donationPageBoxButtons">
        <div class="donationPagedonateBoxButtonDivPage" ng-click="changePage(1)" style="border-bottom:0px;" ng-style="currentPage == 1 && {'background-color':'#cea44a'}">
          <div class="donationPagedonateBoxButtonDivInsidePage"><img src="images/icon/paypal-logo.png" width="64" height="64"></img></div><div class="donationPagedonateBoxButtonDivInsideText" style="text-align:center;"><p> PayPal </p></div>
        </div>
        <div class="donationPagedonateBoxButtonDivPage" ng-click="changePage(2)" style="border-bottom:0px;" ng-style="currentPage == 2 && {'background-color':'#cea44a'}">
          <div class="donationPagedonateBoxButtonDivInsidePage"><img src="images/icon/phone-call.png" width="64" height="64"></img></div><div class="donationPagedonateBoxButtonDivInsideText"><p> Chamada </p></div>
        </div>
        <div class="donationPagedonateBoxButtonDivPage" ng-click="changePage(3)" style="border-bottom:0px;" ng-style="currentPage == 3 && {'background-color':'#cea44a'}">
          <div class="donationPagedonateBoxButtonDivInsidePage"><img src="images/icon/bank-transfer-logo.png" width="64" height="64"></img></div><div class="donationPagedonateBoxButtonDivInsideText"><p> Transferência </p></div>
        </div>
        <div class="donationPagedonateBoxButtonDivPage" ng-click="changePage(4)" ng-style="currentPage == 4 && {'background-color':'#cea44a'}">
          <div class="donationPagedonateBoxButtonDivInsidePage"><img src="images/icon/donation.png" width="64" height="64"></img></div><div class="donationPagedonateBoxButtonDivInsideText"><p> Doação </p></div>
        </div>
      </div>
      <div id="donationPageBoxPaypal" ng-if="currentPage == 1">
        <div id="donationPageBoxPaypalLeft"><p>{{structuralInfo[0].textoPaypal}}</p></div>
        <div id="donationPageBoxPaypalRight">
          <div id="donationPageBoxPaypalRightContainer">
            <div id="donationPageBoxPaypalRightContainerEuro">€</div>
            <div id="donationPageBoxPaypalRightContainerValue">
              <input class="donation" type="text" placeholder="{{slider_visible_bar.value}}" value="{{slider_visible_bar.value}}" ng-model="slider_visible_bar.value">
            </div>
          </div>
          <form id="paypalForm" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
            <input type="hidden" name="cmd" value="_donations" /><input type="hidden" name="hosted_button_id" value="KYT7ZDUUJ7URJ"/><input type="hidden" name="amount" value="{{slider_visible_bar.value}}"/>
          <div id="donationPageBoxPaypalRightContainerDonate" style="cursor:pointer;"><div id="donationPageBoxPaypalRightContainerDonateInside"><p><a id="linkDonate" href="javascript:{}" onclick="document.getElementById('paypalForm').submit(); return false;"> Doar Agora </a></p></div></div></form>
        </div>
        <div>
        <rzslider id="slider" rz-slider-model="slider_visible_bar.value" rz-slider-options="slider_visible_bar.options" rz-slider-on-change="$scope.onSliderChange()"></rzslider>
        </div>
      </div>
      <div id="donationPageBoxPhone" ng-if="currentPage == 2">
        <div id="donationPageBoxPhoneLeft"><p>{{structuralInfo[0].textoChamada}}</p></div>
      </div>
      <div id="donationPageBoxTransfer" ng-if="currentPage == 3">
        <div id="donationPageBoxPhoneLeft"><p>{{structuralInfo[0].textoTransferencia}}</p></div>
      </div>
      <div id="donationPageBoxDonation" ng-if="currentPage == 4">
        <div id="donationPageBoxPhoneLeft"><p>{{structuralInfo[0].textoDoacao}}</p></div>
      </div>
    </div>
  </div>
