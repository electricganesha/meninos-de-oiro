<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Administração - Meninos de Oiro</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body style="background-color:#e8e8e8;">
<div class="container">
  <h2 class="form-signin-heading" style="text-align:center; margin-bottom:50px; border-bottom: 1px solid #000; padding-bottom:15px;"> Administração - Meninos de Oiro </h2>

<div class="col-sm-6 col-sm-offset-3" style="width:30vw; margin-top:10vh; background-color:white; border-radius:25px;">

    <h1><span class="fa fa-sign-in"></span> Portal de Administração</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Nome de Utilizador:</label>
            <input type="text" class="form-control" name="username" placeholder="Por favor introduza o nome de utilizador para acesso.">
        </div>
        <div class="form-group">
            <label>Palavra-Passe:</label>
            <input type="password" class="form-control" name="password" placeholder="Por favor introduza a respectiva palavra-passe para acesso.">
        </div>

        <button type="submit" class="btn btn-warning btn-lg" style="background-color:#cea44a;">Login</button>
    </form>

    <hr>

    <p>Ir para a <a href="/">página principal</a>.</p>

</div>

</div>
</body>
</html>
