      <div class="navbar-header-links">
        <li><a href="/donatenow" id="donateNowButton">DOE AGORA</a></li>
        <li><a>|</a></li>
        <li><a href="/membership" style="padding-right:0px;">Já Se Tornou Membro?</a></li>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" ng-init="showSubMenuAbout = true">
        <ul class="nav navbar-nav navbar-right">
          <li><a ng-mouseover="showSubMenuAbout = false ; showSubMenuPartners = false" href="/">Homepage</a></li>
